# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=ticket_user
MYSQL_PASSWORD=your_password_here
MYSQL_DATABASE=ticketing

# Required for database creation and destructive operations
MARIADB_ROOT_USER=root
MARIADB_ROOT_PASSWORD=your_root_password

# Alternative database configuration (either set works)
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_USER=ticketing_app
MARIADB_PASSWORD=your_password_here
MARIADB_DATABASE=ticketing_app

# Next Auth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_secure_random_string_at_least_32_chars

# App Port (optional, defaults to 3000)
PORT=3000

# Socket.IO Configuration
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google API (for chatbot)
NEXT_PUBLIC_GOOGLE_API_KEY=your_google_api_key_here

# File upload config
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
